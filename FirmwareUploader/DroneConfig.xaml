<Window x:Class="FirmwareUploader.DroneConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirmwareUploader"
        mc:Ignorable="d"
        Title="Drone Config" Height="600" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="configText" Height="470" Margin="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Height="30" Width="100"
                        Click="SaveButton_Click"
                        >Save</Button>
                <Button Height="30" Width="100" Margin="10,0,0,0"
                        Click="CancelButton_Click"
                        >Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
